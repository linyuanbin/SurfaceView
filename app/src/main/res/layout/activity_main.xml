<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lin.surfaceView.MainActivity">

    <!--加载视频-->
    <SurfaceView
    android:id="@+id/surfaceView_gb"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/center"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/qqNum"
                android:hint="@string/QQphoneHInt"
                android:textColorHint="#ffffff"
                android:textColor="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"/>

            <ImageButton
                android:id="@+id/qqListIndicator"
                android:layout_marginRight="6dp"
                android:background="#00000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/qqNum"
                android:layout_alignRight="@+id/qqNum"
                android:layout_marginBottom="15dp"/>

            <ImageButton
                android:id="@+id/delete"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/remove"
                android:background="#00000000"
                android:layout_toLeftOf="@id/qqListIndicator"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/delete"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_loginQQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/qqNum"
                android:layout_alignRight="@id/qqNum"
                android:layout_below="@id/qqNum"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"
                android:divider="#aaaaaa"
                android:dividerHeight="0px"/>
        </RelativeLayout>

        <EditText
            android:id="@+id/password"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            android:hint="@string/password"
            android:textColorHint="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/login"
            android:text="@string/login"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e085c2f7" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/forgetPassword"
                android:clickable="true"
                android:text="@string/forgetPassword"
                android:textColor="#2673b3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/register"
                android:clickable="true"
                android:text="@string/register"
                android:gravity="right"
                android:textColor="#2673b3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:scaleX="0.5"
        android:scaleY="0.5"
        android:layout_above="@id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/agree"
            android:text="@string/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/agreement"
            android:clickable="true"
            android:text="@string/agreement"
            android:textColor="#2673b3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>
